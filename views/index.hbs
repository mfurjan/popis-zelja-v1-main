<h2 class="text-3xl font-semibold text-blue-600 mb-6">Popis mojih želja:</h2>

<ul class="space-y-6">
  {{#unless userEmail}}
    <li class="text-gray-500 italic">Prijavite se kako bi mogli dodati želju...</li>
  {{/unless}}

  {{#if userEmail}}
  {{#each items}}
    <li class="bg-white p-6 rounded-xl shadow-xl transition-all flex justify-between items-center">
      
      <div class="flex-1">
        <h3 class="text-2xl font-semibold text-indigo-700">{{name}}</h3>
      </div>

      <div>
        <form method="post" action="/rooms/delete" class="py-1 px-2 bg-white text-teal-700 rounded text-sm font-normal">
          <input type="hidden" name="id" value="{{id}}" />
          
          <div class="flex space-x-2">
            <input type="submit" value="Obriši"
              class="w-full p-3 bg-gradient-to-r from-red-500 to-red-600 text-white rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 transition duration-300" />
          </div>
        </form>
      </div>
    </li>
    {{/each}}
    {{/if}}

</ul>